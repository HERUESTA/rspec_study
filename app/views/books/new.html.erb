<div class="max-w-4xl mx-auto p-6">
  <% content_for :title, "New book" %>

  <h1 class="text-4xl font-bold text-gray-800 mb-8 border-b-2 border-gray-200 pb-4">New book</h1>

  <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 mb-6">
    <%= render "form", book: @book %>
  </div>

  <div>
    <%= link_to "Back to books", books_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded text-sm transition duration-200 ease-in-out" %>
  </div>
</div>