<div class="max-w-4xl mx-auto p-6">
  <% if notice %>
    <p style="color: green" class="mb-4 p-3 bg-green-50 border border-green-200 rounded"><%= notice %></p>
  <% end %>

  <% content_for :title, "Books" %>

  <h1 class="text-4xl font-bold text-gray-800 mb-8 border-b-2 border-gray-200 pb-4">本一覧</h1>

  <div id="books" class="space-y-6 mb-8">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4">
        <%= render book %>
        <p class="mt-3">
          <%= link_to "本の詳細を見る", book, class: "inline-block bg-gray-500 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded text-sm transition duration-200 ease-in-out" %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "新しい本の作成", new_book_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 ease-in-out shadow-md hover:shadow-lg" %>
</div>