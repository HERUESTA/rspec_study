<div class="max-w-4xl mx-auto p-6">
  <% if notice %>
    <p style="color: green" class="mb-4 p-3 bg-green-50 border border-green-200 rounded"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 mb-6">
    <%= render @book %>
  </div>

  <div class="flex gap-4 items-center">
    <%= link_to "Edit this book", edit_book_path(@book), class: "inline-block bg-yellow-500 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded text-sm transition duration-200 ease-in-out" %>
    <span class="text-gray-400">|</span>
    <%= link_to "Back to books", books_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded text-sm transition duration-200 ease-in-out" %>

    <%= button_to "Destroy this book", @book, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-medium py-2 px-4 rounded text-sm transition duration-200 ease-in-out", 
        data: { confirm: "Are you sure?" } %>
  </div>
</div>